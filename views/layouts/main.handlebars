<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <nav
      class="navbar has-background-light p-2 has-text-weight-semibold is-transparent"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand">
        <div class="navbar-item is-size-3">
          The Tech Blog
        </div>
        <!-- this is the burger menu elements -->
        <a
          role="button"
          class="navbar-burger has-background-dark is-transparent"
          id="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div
        id="navbar"
        class="navbar-menu has-background-dark is-transparent">
        <div class="navbar-end">
          {{! if the user is logged in they will see the logout and homepage button }}
            <div class="navbar-item">
                <button
                  class="button navbar-item has-background-dark is-inverted is-size-5 mr-2"
                  id="homepage"
                  >Homepage</button>
                <button
                  class="button navbar-item has-background-dark is-inverted is-size-5 mr-2"
                  id="dashboard"
                  >Dashboard</button>
                {{#if loggedIn}}
                <button
                class="button navbar-item has-background-dark is-size-5"
                id="logout"
                >Logout</button>
                {{/if}}
            </div>
        </div>
      </div>
    </nav>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{body}}}
    </main>
    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="../public/js/logout.js"></script>
    {{/if}}
  </body>
</html>