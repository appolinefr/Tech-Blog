<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <nav
      class="navbar has-background-primary has-text-white p-2 has-text-weight-semibold is-transparent"
      role="navigation"
      aria-label="main navigation"
    >
      <div class="navbar-brand">
        <div class="navbar-item is-size-3 has-text-white">
          The Tech Blog
        </div>
        <!-- this is the burger menu elements -->
        <a
          role="button"
          class="navbar-burger has-background-primary has-text-white is-transparent"
          id="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div
        id="navbar"
        class="navbar-menu has-background-primary has-text-white is-transparent"
      >
        <div class="navbar-end">
          {{! if the user is logged in they will see the logout and homepage button }}
          <div class="navbar-item">
            <button
              class="button navbar-item has-background-primary has-text-white is-size-5 mr-2"
              id="homepage"
            >
              <a class="has-text-white" href="/">Homepage</a>
            </button>
            {{#if loggedIn}}
              <button
                class="button navbar-item has-background-primary has-text-white is-size-5 mr-2"
                id="dashboard"
              >
                <a href="/dashboard">>Dashboard</a>
              </button>
              <button
                class="button navbar-item has-background-primary has-text-white is-size-5"
                id="logout"
              >Logout</button>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{body}}}
    </main>
    <!-- Render script for logged in users only -->
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>