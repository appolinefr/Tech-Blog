<section class="section">
  <div class="columns is-mobile is-centered">
    <div
      class="column is-three-quarters-mobile is-two-thirds-tablet is-half-desktop is-one-third-widescreen is-one-quarter-fullhd"
    >
      <div class="container is-vcentered">
        {{! card element contains form for signUp }}
        <div class="card mt-6">
          <div class="card-content">
            <div class="field">
              <label class="label">Name</label>
              <div class="control">
                <input class="input" type="text" id="name-signup" />
              </div>
            </div>
            <div class="field">
              <label class="label">Email</label>
              <div class="control">
                <input class="input" type="text" id="email-signup" />
              </div>
            </div>
            <div class="field">
              <label class="label">Password</label>
              <div class="control">
                <input class="input" type="password" id="password-signup" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button
                  class="button has-background-dark has-text-white"
                  id="signup-form-btn"
                  type="submit"
                >Sign Up</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
